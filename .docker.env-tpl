# Environment variables to run the docker image

# NEVER run with debug in production!
DJ_DEBUG=False

# Generate a new key using scripts/generate_secret_key.py
DJ_SECRET_KEY=make-a-secure-key-to-go-here

# Adjust to the Postgres connection string you require
DJ_DB_URL=postgresql://user:password@database.url:port/database_name

# Comma-separated list of domains
DJ_ALLOWED_HOSTS=host1.example.com,host2.example.com

# Timezone to use for this site
DJ_TIMEZONE=US/Eastern
